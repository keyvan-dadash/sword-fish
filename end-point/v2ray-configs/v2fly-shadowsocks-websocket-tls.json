{
    "log": {
        "loglevel": "warning",
        "access": "/var/log/v2ray/access.log",
        "error": "/var/log/v2ray/error.log"
    },
    "routing": {
        "domainStrategy": "AsIs",
        "rules": [
            {
                "type": "field",
                "ip": [
                    "geoip:private"
                ],
                "outboundTag": "block"
            }
        ]
    },
    "inbounds": [
        {
            "listen": "0.0.0.0",
            "port": "${V2FLY_WEBSOCKET_PORT:-10000}",
            "protocol": "shadowsocks",
            "settings": {
                "method": "chacha20-ietf-poly1305",
                "password": "${V2FLY_PASSWORD:-strongpassword}"
            },
            "streamSettings": {
                "network": "ws",
                "wsSettings":{
                  "path": "/${V2FLY_WEBSOCKET_PATH:-websocketpath}"
                }
            },
            "tag": "in-simple"
        },
        {
            "listen": "0.0.0.0",
            "port": "1${V2FLY_WEBSOCKET_PORT:-10000}",
            "protocol": "shadowsocks",
            "settings": {
                "method": "chacha20-ietf-poly1305",
                "password": "tor-${V2FLY_PASSWORD:-strongpassword}"
            },
            "streamSettings": {
                "network": "ws",
                "wsSettings":{
                  "path": "/tor-${V2FLY_WEBSOCKET_PATH:-websocketpath}"
                }
            },
            "tag": "in-tor"
        },
        {
            "listen": "0.0.0.0",
            "port": "2${V2FLY_WEBSOCKET_PORT:-10000}",
            "protocol": "shadowsocks",
            "settings": {
                "method": "chacha20-ietf-poly1305",
                "password": "vpn-${V2FLY_PASSWORD:-strongpassword}"
            },
            "streamSettings": {
                "network": "ws",
                "wsSettings":{
                  "path": "/vpn-${V2FLY_WEBSOCKET_PATH:-websocketpath}"
                }
            },
            "tag": "in-vpn"
        }
    ],
    "outbounds": [
        {
            "protocol": "freedom",
            "tag": "direct"
        },
        {
            "protocol": "blackhole",
            "tag": "block"
        },
        {
            "protocol": "socks",
            "settings": {
                "servers": [
                    {
                        "address": "${V2FLY_TOR_ADDRESS:-toraddress}",
                        "port": 9050,
                        "udp": true
                    }
                ]
            },
            "tag": "out-tor"
        },
        {
            "protocol": "socks",
            "settings": {
                "servers": [
                    {
                        "address": "127.0.0.1",
                        "port": 19050,
                        "udp": true
                    }
                ]
            },
            "tag": "out-vpn"
        }
    ],
    "routing": {
        "domainStrategy": "AsIs",
        "rules": [
            {
                "type": "field",
                "ip": [
                    "geoip:private"
                ],
                "outboundTag": "block"
            },
            {
              "type": "field",
              "inboundTag":["in-tor"],
              "outboundTag":"out-tor"
            },
            {
              "type": "field",
              "inboundTag":["in-vpn"],
              "outboundTag":"out-vpn"
            },
            {
              "type": "field",
              "inboundTag":["in-simple"],
              "outboundTag":"direct"
            }
        ]
    }
}
