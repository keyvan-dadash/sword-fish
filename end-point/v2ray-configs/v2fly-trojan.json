{
	"log": {
    "loglevel": "warning",
    "access": "/var/log/v2ray/access.log",
    "error": "/var/log/v2ray/error.log"
  },
  "inbounds": [
      {
            "port": "${V2FLY_TROJAN_PORT:-port}",
            "protocol": "trojan",
            "settings": {
                "clients": [
                    {
                        "password": "${V2FLY_PASSWORD:-strongpassword}",
                        "email": "${V2FLY_EMAIL:-v2flyemail}"
                    }
                ]
            },
            "streamSettings": {
                "network": "tcp",
                "security": "tls",
                "tlsSettings": {
                    "alpn": [
                        "http/1.1"
                    ],
                    "certificates": [
                        {
                            "certificateFile": "${V2FLY_CERT_PATH:-path}",
                            "keyFile": "${V2FLY_PRIV_KEY_PATH:-path}"
                        }
                    ]
                }
            }
        }
    ],
    "outbounds": [
        {
            "protocol": "freedom",
            "tag": "direct"
        },
        {
            "protocol": "blackhole",
            "tag": "block"
        }
    ],
    "routing": {
        "domainStrategy": "AsIs",
        "rules": [
            {
                "type": "field",
                "ip": [
                    "geoip:private"
                ],
                "outboundTag": "block"
            }
        ]
    }
}

