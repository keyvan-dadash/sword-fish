{
    "log": {
        "loglevel": "warning"
    },
    "routing": {
        "domainStrategy": "AsIs",
        "rules": [
            {
                "type": "field",
                "ip": [
                    "geoip:private"
                ],
                "outboundTag": "direct"
            }
        ]
    },
    "inbounds": [
        {
            "listen": "127.0.0.1",
            "port": "8388",
            "protocol": "shadowsocks",
            "settings": {
                "method": "chacha20-ietf-poly1305",
                "password": "a"
            }
        },
        {
            "listen": "127.0.0.1",
            "port": "1080",
            "protocol": "socks",
            "settings": {
                "auth": "noauth",
                "udp": true,
                "ip": "127.0.0.1"
            }
        },
        {
            "listen": "127.0.0.1",
            "port": "1081",
            "protocol": "http"
        }
    ],
    "outbounds": [
        {
            "protocol": "trojan",
            "settings": {
                "servers": [
                    {
                        "address": "${V2FLY_SERVER_ADDRESS:-address}",
                        "port": 443,
                        "password": "${V2FLY_TROJAN_IN_PASSWORD:-strongpassword}"
                    }
                ]
            },
            "streamSettings": {
                "network": "tcp",
                "security": "tls",
                "tlsSettings" : {
			          "alpn": [
                    "http/1.1"
		            ],
                "allowInsecure" : true,
			          "serverName": "${V2FLY_TROJAN_IN_SNI_NAME:-sniname}"
            	}
            }
        },
        {
            "protocol": "freedom",
            "tag": "direct"
        }
    ]
}
