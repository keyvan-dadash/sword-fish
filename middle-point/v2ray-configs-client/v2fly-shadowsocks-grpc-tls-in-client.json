{
    "log": {
        "loglevel": "warning"
    },
    "inbounds": [
        {   
            "listen": "127.0.0.1",
            "port": "8388",
            "protocol": "shadowsocks",
            "settings": {
                "method": "chacha20-ietf-poly1305",
                "password": "a"
            }
        },
        {
            "listen": "127.0.0.1",
            "port": "1080",
            "protocol": "socks",
            "settings": {
                "auth": "noauth",
                "udp": true,
                "ip": "127.0.0.1"
            }
        },
        {
            "listen": "127.0.0.1",
            "port": "1081",
            "protocol": "http"
        }
    ],
    "outbounds": [
        {
            "protocol": "shadowsocks",
            "settings": {
                "servers": [
                    {
                        "address": "${V2FLY_SERVER_ADDRESS:-address}",
                        "port": 443,
                        "method": "chacha20-ietf-poly1305",
                        "password": "${V2FLY_GRPC_IN_PASSWORD:-strongpassword}"
                    }
                ]
            },
            "streamSettings": {
                "network": "grpc",
                "security": "tls",
                "grpcSettings": {
                    "serviceName": "${V2FLY_GRPC_IN_SERVICE_NAME_VAR:-examplegrpcservicename}"
                }
            },
            "tag": "proxy"
        },
        {
            "protocol": "freedom",
            "tag": "direct"
        }
    ],
    "routing": {
        "domainStrategy": "AsIs",
        "rules": [
            {
                "type": "field",
                "ip": [
                    "geoip:private"
                ],
                "outboundTag": "direct"
            }
        ]
    }
}
