{
    "log": {
        "loglevel": "warning"
    },
    "inbounds": [
        {
            "_comment": "HERE",
            "tag": "${V2FLY_TROJAN_IN_TAG_VAR:-tr}-insh",
            "listen": "127.0.0.1",
            "port": "${V2FLY_SHS_IN_PORT_VAR:-8388}",
            "protocol": "shadowsocks",
            "settings": {
                "method": "chacha20-ietf-poly1305",
                "password": "a"
            }
        },
        {
            "_comment": "HERE",
            "tag": "${V2FLY_TROJAN_IN_TAG_VAR:-tr}-inso",
            "listen": "127.0.0.1",
            "port": "${V2FLY_SO_IN_PORT_VAR:-1080}",
            "protocol": "socks",
            "settings": {
                "auth": "noauth",
                "udp": true,
                "ip": "127.0.0.1"
            }
        },
        {
            "listen": "127.0.0.1",
            "port": "1081",
            "protocol": "http"
        }
    ],
    "outbounds": [
        {
            "_comment": "HERE",
            "tag": "${V2FLY_TROJAN_IN_TAG_VAR:-tr}-out",
            "protocol": "trojan",
            "settings": {
                "servers": [
                    {
                        "address": "${V2FLY_SERVER_ADDRESS:-address}",
                        "port": 443,
                        "password": "${V2FLY_TROJAN_IN_PASSWORD:-strongpassword}"
                    }
                ]
            },
            "streamSettings": {
                "network": "tcp",
                "security": "tls",
                "tlsSettings" : {
			          "alpn": [
                    "http/1.1"
		            ],
                "allowInsecure" : true,
			          "serverName": "${V2FLY_TROJAN_SNI_NAME:-sniname}"
            	}
            }
        },
        {
            "protocol": "freedom",
            "tag": "direct"
        }
    ],
    "routing": {
        "domainStrategy": "AsIs",
        "rules": [
            {
                "type": "field",
                "ip": [
                    "geoip:private"
                ],
                "outboundTag": "direct"
            },
            {
                "_comment": "HERE",
                "type": "field",
                "inboundTag": [
                    "${V2FLY_TROJAN_IN_TAG_VAR:-tr}-insh",
                    "${V2FLY_TROJAN_IN_TAG_VAR:-tr}-inso"
                ],
                "outboundTag": "${V2FLY_TROJAN_IN_TAG_VAR:-tr}-out"
            }
        ]
    }
}
