{
    "log": {
        "loglevel": "warning",
        "access": "/var/log/v2ray/access.log",
        "error": "/var/log/v2ray/error.log"
    },
    "routing": {
        "domainStrategy": "AsIs",
        "rules": [
            {
                "type": "field",
                "ip": [
                    "geoip:private"
                ],
                "outboundTag": "block"
            }
        ]
    },
    "inbounds": [
        {
            "listen": "127.0.0.1",
            "port": "${V2FLY_PORT:-10000}",
            "protocol": "shadowsocks",
            "settings": {
                "method": "chacha20-ietf-poly1305",
                "password": "${V2FLY_PASSWORD:-strongpassword}"
            },
            "streamSettings": {
                "network": "ws",
                "wsSettings":{
                  "path": "${V2FLY_WEBSOCKET_PATH:-websocketpath}"
                }
            }
        }
    ],
    "outbounds": [
        {
            "protocol": "socks",
            "settings": {
                "servers": [
                    {
                        "address": "${V2FLY_OUTBOUND_ADDRESS:-out}",
                        "port": "${V2FLY_OUTBOUND_PORT:-1234}",
                        "udp": true
                    }
                ]
            },
            "tag": "out"
        }
    ],
    "routing": {
        "domainStrategy": "AsIs",
        "rules": [
            {
                "type": "field",
                "ip": [
                    "geoip:private"
                ],
                "outboundTag": "block"
            }
        ]
    }
}
