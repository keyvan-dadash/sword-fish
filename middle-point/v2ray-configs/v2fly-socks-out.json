{
    "log": {
        "loglevel": "warning",
        "access": "/var/log/v2ray/access.log",
        "error": "/var/log/v2ray/error.log"
    },
    "inbounds": [
        {
            "listen": "0.0.0.0",
            "port": "${V2FLY_OUTBOUND_PORT_VAR:-1234}",
            "protocol": "socks",
            "udp": true,
            "tag": "simple"
        }
    ],
    "outbounds": [
        {
            "protocol": "trojan",
            "tag": "O-trojan",
            "settings": {
                "servers": [
                    {
                        "address": "${V2FLY_REMOTE_SERVER_ADDRESS:-address}",
                        "port": 443,
                        "password": "${V2FLY_TROJAN_OUT_PASSWORD:-strongpassword}"
                    }
                ]
            },
            "streamSettings": {
                "network": "tcp",
                "security": "tls",
                "tlsSettings" : {
                    "allowInsecure" : true,
                    "serverName": "${V2FLY_TROJAN_SNI_NAME:-sniname}",
                    "fingerprint": "chrome",
                    "alpn": "http/1.1"
                }
            }
        },
        {
            "protocol": "shadowsocks",
            "tag": "O-websocket",
            "settings": {
                "servers": [
                    {
                        "address": "${V2FLY_REMOTE_SERVER_ADDRESS:-address}",
                        "port": 443,
                        "method": "chacha20-ietf-poly1305",
                        "password": "${V2FLY_WEBSOCKET_PASSWORD:-strongpassword}"
                    }
                ]
            },
            "streamSettings": {
                "network": "ws",
                "security": "tls",
                "wsSettings": {
                    "path": "${V2FLY_REMOTE_WEBSOCKET_PATH:-websocketpath}"
                }
            }
        },
        {
            "protocol": "shadowsocks",
            "tag": "O-grpc",
            "settings": {
                "servers": [
                    {
                        "address": "${V2FLY_REMOTE_SERVER_ADDRESS:-address}",
                        "port": 443,
                        "method": "chacha20-ietf-poly1305",
                        "password": "${V2FLY_GRPC_OUT_PASSWORD:-strongpassword}"
                    }
                ]
            },
            "streamSettings": {
                "network": "grpc",
                "security": "tls",
                "grpcSettings": {
                    "serviceName": "${V2FLY_REMOTE_GRPC_SERVICE_NAME:-examplegrpcservicename}"
                }
            }
        }
    ],
    "routing": {
        "domainStrategy": "IPOnDemand",
        "balancers": [
            {
                "tag": "all",
                "selector": [
                    "O-trojan",
                    "O-websocket",
                    "O-grpc"
                ]
            },
            {
                "tag": "webs",
                "selector": [
                    "O-websocket"
                ]
            },
            {
                "tag": "grpc",
                "selector": [
                    "O-grpc"
                ]
            },
            {
                "tag": "trojan",
                "selector": [
                    "O-trojan"
                ]
            }
        ],
        "rules": [
            {
                "type": "field",
                "ip": [
                    "geoip:private"
                ],
                "outboundTag": "block"
            },
            {
              "type": "field",
              "network": "tcp,udp",
              "balancerTag": "grpc"
            }
        ]
    }
}
